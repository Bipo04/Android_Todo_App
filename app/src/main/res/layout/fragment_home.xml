<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:fillViewport="true"
    tools:context=".fragments.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:paddingHorizontal="24dp"
        android:paddingTop="24dp"
        android:paddingBottom="120dp">

        <!-- Header: Avatar + Name + Notification -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <!-- Profile section -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- Avatar -->
                <ImageView
                    android:id="@+id/img_avatar"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/back_user"
                    android:padding="8dp"
                    android:src="@drawable/ic_users" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hello!"
                        android:textColor="@color/text_description"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Livia Vaccaro"
                        android:textColor="@color/text_title"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <!-- Notification Icon -->
            <ImageView
                android:id="@+id/img_notification"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_notification"
                app:tint="@color/text_title" />
        </RelativeLayout>

        <!-- Progress Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_purple_card"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_today_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your today's task\nalmost done!"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/btn_view_task"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/button_white_rounded"
                        android:gravity="center"
                        android:paddingHorizontal="24dp"
                        android:text="View Task"
                        android:textColor="@color/primary_purple"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Progress Circle -->
                <FrameLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true">

                    <ProgressBar
                        android:id="@+id/progress_today"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:indeterminate="false"
                        android:max="100"
                        android:progress="85"
                        android:progressDrawable="@drawable/circular_progress" />

                    <TextView
                        android:id="@+id/tv_today_progress_percent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="85%"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </FrameLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- In Progress Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="In Progress"
                android:textColor="@color/text_title"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_in_progress_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:textColor="@color/text_description"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Horizontal Scroll for In Progress Tasks -->
        <HorizontalScrollView
            android:id="@+id/scroll_in_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/layout_in_progress_tasks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp">

                <!-- Tasks will be added dynamically -->

            </LinearLayout>
        </HorizontalScrollView>

        <!-- Empty State for In Progress -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_empty_in_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:visibility="gone"
            app:cardCornerRadius="16dp"
            app:cardElevation="5dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No tasks in progress"
                    android:textColor="@color/text_description"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/btn_add_task_empty"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/button_purple_rounded"
                    android:gravity="center"
                    android:paddingHorizontal="24dp"
                    android:text="+ Add Task"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Task Groups Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Task Groups"
                android:textColor="@color/text_title"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_task_groups_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textColor="@color/text_description"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Task Groups List -->
        <LinearLayout
            android:id="@+id/layout_task_groups"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:paddingTop="4dp">

            <!-- Task Group Items will be added dynamically -->

        </LinearLayout>

    </LinearLayout>
</ScrollView>
