<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="16dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Checkbox to mark complete -->
        <ImageView
            android:id="@+id/btn_complete"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_check_circle"
            android:padding="2dp"
            app:tint="@color/text_description" />

        <!-- Left Content -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:layout_toStartOf="@id/layout_right"
            android:layout_toEndOf="@id/btn_complete"
            android:orientation="vertical">

            <!-- Project Name -->
            <TextView
                android:id="@+id/tv_project_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grocery shopping app design"
                android:textColor="@color/text_description"
                android:textSize="12sp" />

            <!-- Task Title -->
            <TextView
                android:id="@+id/tv_task_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Market Research"
                android:textColor="@color/text_title"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Time -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_clock"
                    app:tint="@color/primary_purple" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="10:00 AM"
                    android:textColor="@color/primary_purple"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Right Content: Icon + Status -->
        <LinearLayout
            android:id="@+id/layout_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="end"
            android:orientation="vertical">

            <!-- Category Icon -->
            <ImageView
                android:id="@+id/img_category"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/circle_icon_bg_light"
                android:padding="6dp"
                android:src="@drawable/ic_calendar"
                app:tint="@color/primary_purple" />

            <!-- Status Badge -->
            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Done"
                android:textColor="#4CAF50"
                android:textSize="12sp" />
        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>
